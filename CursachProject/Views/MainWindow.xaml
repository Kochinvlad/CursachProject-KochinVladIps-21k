<Window x:Class="CursachProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SportClubManagementSoftware"
        Title="Sport Club Management Software" Height="450" Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Menu>
            <MenuItem Header="_Файл">
                <MenuItem Header="_Открыть"/>
                <MenuItem Header="_Сохранить"/>
            </MenuItem>
            <MenuItem Header="_Настройки"/>
        </Menu>

        <!-- Разделы приложения -->
        <StackPanel Orientation="Horizontal">
            <!-- Panel with client information -->
            <Border>
                <StackPanel>
                    <TextBlock Text="Clients"/>
                    <ListView ItemsSource="{Binding People}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding FullName}"/>
                                    <TextBlock Text="{Binding ContactInformation}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <!-- Membership information -->
            <Border>
                <StackPanel>
                    <TextBlock Text="Memberships"/>
                    <ListView ItemsSource="{Binding SelectedPerson.Memberships}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Id}"/>
                                    <!-- Add more membership details here -->
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Status bar -->
        <StatusBar VerticalAlignment="Bottom">
            <StatusBarItem>
                <TextBlock Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>